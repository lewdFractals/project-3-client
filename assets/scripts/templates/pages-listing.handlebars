<h2> Pages </h2>
{{#pages}}
  <h4 class="border-top">
    {{header}}
  </h4>
  <p>
    {{{content}}}
  </p>

  <button type="button" class="btn-xs options-button" id="page-options-button" data-page-id={{_id}}>Options</button>

  <div class="page-options" id={{_id}}>
  <!-- Show Page -->
  <div class="show-page-option">
  <form id="show-page">
     <input type="hidden" name="page[_id]" value="{{_id}}">
     <button type="submit" name="submit" class="btn btn-default pull-right">Show This Page</button>
   </form>
 </div>

  <!-- Edit Page -->
  <div class="edit-page-option">
  <form id="edit-page">
     <fieldset>
       <input type="hidden" name="page[_id]" value="{{_id}}">
       <div class="form-group">
         <input type="text" class="form-control" name="page[header]" value="{{header}}" required>
       </div>
       <div class="form-group">
         <textarea class="form-control text-editor" name="page[content]" rows="10" cols=75 required>{{{content}}}</textarea>
       </div>
       <button type="submit" class="btn btn-default pull-right" name="submit">Submit Edit</button>
     </fieldset>
   </form>
 </div>

 <!-- Delete Page -->
 <div class="delete-page-option">
 <form id="delete-page">
   <input type="hidden" name="page[_id]" value="{{_id}}">
   <button type="submit" name="submit" class="btn btn-default pull-right">Delete Page</button>
 </form>
 </div>
 </div>
{{/pages}}
